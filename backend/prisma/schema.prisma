datasource db {
  provider = "postgresql"
  url      = env("postgresql://postgres:password@localhost:5432/template1")
}
//postgresql://username:password@host:port/database_name

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        Int      @id @default(autoincrement())
  text      String
  // Add other fields for your task data as needed
}

